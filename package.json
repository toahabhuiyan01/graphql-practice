{
  "name": "@foodbhai/backend",
  "version": "1.0.0",
  "main": "build/api/serve-api.js",
  "scripts": {
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc",
    "run-server": "node .build/index.js",
    "start": "npm run build && npm run run-server",
    "watch-start": "nodemon --delay 2 -w build/ -x 'npm run start'",
    "gen-mig": "ts-node ./node_modules/typeorm/cli.js migration:generate -d src/datasource.ts",
    "run-mig": "ts-node ./node_modules/typeorm/cli.js migration:run -d src/datasource.ts",
    "creat-mig": "typeorm migration:create"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "chance": "^1.1.12",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-graphql": "^0.12.0",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.7",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@toaha/eslint-config": "github:toahabhuiyan01/eslint-config-ts",
    "@types/bcryptjs": "^2.4.6",
    "@types/chance": "^1.1.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "eslint": "^9.11.0",
    "globals": "^15.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
